name: Deployment to Docker Hub

on:
  push:
    branches: [production]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: docker login
        env: DOCKER_USER = ${{ secrets.DOCKER_HUB_USER }}
          DOCKER_PASSWORD = ${{ secrets.DOCKER_HUB_PASS}}
        run: |
          docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
      - name: ts-express-docker-app
        run: |
          docker build -t ts-express-docker-app .
      - name: docker push
        run: |
          docker push ts-express-docker-app
